from reportlab.lib.pagesizes import landscape, A4
from reportlab.pdfgen import canvas
from reportlab.lib.units import inch
from PIL import Image
import io

# Criar PDF temporário para desenhar
buffer = io.BytesIO()
c = canvas.Canvas(buffer, pagesize=landscape(A4))
width, height = landscape(A4)

# Fundo preto
c.setFillColorRGB(0, 0, 0)
c.rect(0, 0, width, height, stroke=0, fill=1)

# Texto em branco (Chrome Hearts vibe - gótico simulado)
c.setFont("Helvetica-Bold", 60)  
c.setFillColorRGB(1, 1, 1)
c.drawCentredString(width/2, height/2 + 20, "GUILHERME SANTOS")
c.setFont("Helvetica", 30)
c.drawCentredString(width/2, height/2 - 40, "aka saysxnts")

c.save()

# Converter PDF para imagem PNG
buffer.seek(0)
from pdf2image import convert_from_bytes
images = convert_from_bytes(buffer.getvalue())
images[0].save("banner.png", "PNG")